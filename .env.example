# DeepSeek API Configuration
# --------------------------
# Demo Mode: Leave as "demo-key-for-testing" to use the mock API (no real API needed)
# Production: Get your API key from https://platform.deepseek.com/ and replace below
DEEPSEEK_API_KEY=demo-key-for-testing

# API URL Configuration (optional - uncomment to use alternative providers)
# -------------------------------------------------------------------------
# LocalAI (Free, runs locally): 
# DEEPSEEK_API_URL=http://localhost:8080/v1/chat/completions
# DEEPSEEK_API_KEY=localai
#
# Ollama (Free, runs locally):
# DEEPSEEK_API_URL=http://localhost:11434/v1/chat/completions  
# DEEPSEEK_API_KEY=ollama
#
# Leave commented to use default (mock in demo mode, real DeepSeek in production)
# DEEPSEEK_API_URL=


# Cache Configuration
# Options: "file" (default) or "redis"
CACHE_TYPE=file
CACHE_TTL_HOURS=24

# Redis Configuration (only if CACHE_TYPE=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Session Configuration
SESSION_EXPIRE_HOURS=24
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_UPLOAD=5

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_METRICS_MAX_HISTORY=1000
PERFORMANCE_LOG_SLOW_REQUESTS=true
SLOW_REQUEST_THRESHOLD_MS=5000

# API Configuration
ADMIN_API_KEY=demo-api-key-2024
ENABLE_API_KEY_AUTH=false

# Document Intelligence
ENABLE_DOCUMENT_INTELLIGENCE=true
MAX_TOPICS_EXTRACTION=5
MAX_SMART_QUESTIONS=10
SIMILARITY_CHUNK_SIZE=500
SIMILARITY_MAX_RESULTS=10
DOCUMENT_SUMMARY_LENGTH=150

# OCR Settings
OCR_LANGUAGES=en
OCR_GPU_ENABLED=false

# Resource Limits
MAX_MEMORY_MB=1024
MAX_CPU_PERCENT=80
MAX_CONTEXT_LENGTH=8000

# Logging
LOG_LEVEL=INFO
LOG_PERFORMANCE_METRICS=true