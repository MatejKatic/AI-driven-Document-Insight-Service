# Docker Environment Configuration
# Copy this to .env to use with docker-compose

# DeepSeek API Configuration
# For testing: Leave as is to use mock API
# For production: Replace with your actual API key
DEEPSEEK_API_KEY=demo-key-for-testing

# Cache Configuration
CACHE_TYPE=file
CACHE_TTL_HOURS=24

# Session Configuration
SESSION_EXPIRE_HOURS=24
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_UPLOAD=5

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_METRICS_MAX_HISTORY=1000
PERFORMANCE_LOG_SLOW_REQUESTS=true
SLOW_REQUEST_THRESHOLD_MS=5000

# API Configuration
ADMIN_API_KEY=demo-api-key-2024
ENABLE_API_KEY_AUTH=false

# Document Intelligence
ENABLE_DOCUMENT_INTELLIGENCE=true
MAX_TOPICS_EXTRACTION=5
MAX_SMART_QUESTIONS=10

# Resource Limits
MAX_MEMORY_MB=1024
MAX_CPU_PERCENT=80

# Logging
LOG_LEVEL=INFO
LOG_PERFORMANCE_METRICS=true